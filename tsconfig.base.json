{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@insurechain/backend/health": ["libs/backend/health/src/index.ts"],
      "@insurechain/backend/policies": ["libs/backend/policies/src/index.ts"],
      "@insurechain/backend/prisma": ["libs/backend/prisma/src/index.ts"],
      "@insurechain/backend/proposals": ["libs/backend/proposals/src/index.ts"],
      "@insurechain/backend/users": ["libs/backend/users/src/index.ts"],
      "@insurechain/backend/utils": ["libs/backend/utils/src/index.ts"],
      "@insurechain/blockchain": ["libs/blockchain/src/index.ts"],
      "@insurechain/web/backend/data-access": [
        "libs/web/backend/data-access/src/index.ts"
      ],
      "@insurechain/web/blockchain": ["libs/web/blockchain/src/index.ts"],
      "@insurechain/web/blockchain/server": [
        "libs/web/blockchain/src/server.ts"
      ],
      "@insurechain/web/constants": ["libs/web/constants/src/index.ts"],
      "@insurechain/web/constants/server": ["libs/web/constants/src/server.ts"],
      "@insurechain/web/ui-elements": ["libs/web/ui-elements/src/index.ts"],
      "@insurechain/web/ui-elements/server": [
        "libs/web/ui-elements/src/server.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
