// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



enum DependencyOperand {
 AND
 OR
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  password String
  licenseType     String?
  documentNumber  String?
  birthdate       DateTime?
  proposals Proposal[]
}


model Proposal {
  id                Int      @default(autoincrement()) @id
  policyHolder      User @relation(fields: [policyHolderId], references: [id])
  policyHolderId    Int
  coverages         Json
  riskObject        RiskObject?
  riskSubject       RiskSubject?
  active            Boolean? @default(false)
  onBlockchain      Boolean? @default(false)
}

model RiskObject {
  id            Int @default(autoincrement()) @id
  model         String
  fuelType      String
  power         Int
  purchaseDate  DateTime
  plate         String
  kmsYear       Int
  parking       String
  proposal      Proposal @relation(fields: [proposalId],references: [id])
  proposalId    Int @unique
}

model RiskSubject {
  id              Int     @default(autoincrement()) @id
  name            String
  licenseType     String
  documentNumber  String
  birthdate       DateTime
  proposal        Proposal  @relation(fields: [proposalId], references: [id])
  proposalId      Int @unique
}

model CoverageType {
  id                  Int @default(autoincrement()) @id
  identifier          String @unique
  order               Int?
  params              Param[]
  premiumFactor       Float
  title               String
  description         String
}

model Param {
  id             Int @default(autoincrement()) @id
  identifier     String
  default        String
  values         String[]
  choices        Choice[]
  coverageType   CoverageType @relation(fields: [coverageTypeId], references: [id])
  coverageTypeId Int
}

model Choice {
  id             Int @default(autoincrement()) @id
  identifier     String
  title          String
  description    String
  param          Param @relation(fields: [paramId], references: [id])
  paramId        Int
}


